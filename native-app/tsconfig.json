{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "nodenext", // or "node16" or "bundler"
    "target": "ESNext",
    "module": "nodenext",
    "jsx": "react-native",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
